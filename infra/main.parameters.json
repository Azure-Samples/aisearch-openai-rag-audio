{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentName": {
      "value": "${AZURE_ENV_NAME}"
    },
    "resourceGroupName": {
      "value": "${AZURE_RESOURCE_GROUP}"
    },
    "location": {
      "value": "${AZURE_LOCATION}"
    },
    "principalId": {
      "value": "${AZURE_PRINCIPAL_ID}"
    },
    "openAiServiceName": {
      "value": "${AZURE_OPENAI_SERVICE}"
    },
    "openAiResourceGroupName": {
      "value": "${AZURE_OPENAI_RESOURCE_GROUP}"
    },
    "reuseExistingOpenAi": {
      "value": "${AZURE_OPENAI_REUSE_EXISTING=false}"
    },
    "openAiEndpoint": {
      "value": "${AZURE_OPENAI_ENDPOINT}"
    },
    "openAiRealtimeDeployment": {
      "value": "${AZURE_OPENAI_REALTIME_DEPLOYMENT}"
    },
    "searchIndexName": {
      "value": "${AZURE_SEARCH_INDEX=voicerag-intvect}"
    },
    "searchSemanticConfiguration":{
      "value": "${AZURE_SEARCH_SEMANTIC_CONFIGURATION=default}"
    },
    "searchIdentifierField": {
      "value": "${AZURE_SEARCH_IDENTIFIER_FIELD=chunk_id}"
    },
    "searchContentField": {
      "value": "${AZURE_SEARCH_CONTENT_FIELD=chunk}"
    },
    "searchTitleField": {
      "value": "${AZURE_SEARCH_TITLE_FIELD=title}"
    },
    "searchEmbeddingField": {
      "value": "${AZURE_SEARCH_EMBEDDING_FIELD=text_vector}"
    },
    "searchUseVectorQuery": {
      "value": "${AZURE_SEARCH_USE_VECTOR_QUERY=true}"
    },
    "searchServiceName": {
      "value": "${AZURE_SEARCH_SERVICE}"
    },
    "searchServiceResourceGroupName": {
      "value": "${AZURE_SEARCH_SERVICE_RESOURCE_GROUP}"
    },
    "searchServiceLocation": {
      "value": "${AZURE_SEARCH_SERVICE_LOCATION}"
    },
    "searchServiceSkuName": {
      "value": "${AZURE_SEARCH_SERVICE_SKU=standard}"
    },
    "searchServiceSemanticRankerLevel": {
      "value": "${AZURE_SEARCH_SEMANTIC_RANKER=free}"
    },
    "reuseExistingSearch": {
      "value": "${AZURE_SEARCH_REUSE_EXISTING=false}"
    },
    "searchEndpoint": {
      "value": "${AZURE_SEARCH_ENDPOINT}"
    },
    "storageAccountName": {
      "value": "${AZURE_STORAGE_ACCOUNT}"
    },
    "storageResourceGroupName": {
      "value": "${AZURE_STORAGE_RESOURCE_GROUP}"
    },
    "storageSkuName": {
      "value": "${AZURE_STORAGE_SKU=Standard_LRS}"
    },
    "backendServiceName": {
      "value": "${AZURE_CONTAINER_APP_NAME}"
    },
    "realtimeDeploymentCapacity": {
      "value": "${AZURE_OPENAI_REALTIME_DEPLOYMENT_CAPACITY=1}"
    },
    "embeddingDeploymentCapacity": {
      "value": "${AZURE_OPENAI_EMB_DEPLOYMENT_CAPACITY=30}"
    },
    "embeddingDimensions": {
      "value": "${AZURE_OPENAI_EMB_DIMENSIONS}"
    },
    "logAnalyticsName": {
      "value": "${AZURE_LOG_ANALYTICS}"
    },
    "runningOnGh": {
      "value": "${GITHUB_ACTIONS}"
    },
    "runningOnAdo": {
      "value": "${TF_BUILD}"
    },
    "webAppExists": {
      "value": "${SERVICE_WEB_RESOURCE_EXISTS=false}"
    },
    "azureContainerAppsWorkloadProfile": {
      "value": "${AZURE_CONTAINER_APPS_WORKLOAD_PROFILE=Consumption}"
    }
  }
}
